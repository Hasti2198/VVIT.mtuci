#1
def read_and_print_file():
    try:
        with open('example.txt', 'r', encoding='utf-8') as file:
            content = file.read()
            print(content)
    except FileNotFoundError:
        print("Файл example.txt не найден.")
read_and_print_file()
#2
def write_to_file():
    text = 'Text example'
    with open('user_input.txt', 'w') as file:
        file.write(text)
    print('Текст записан')
#Добавление текста
    choice = 'да'
    if choice != 'да':
        return None
    else:
        additional_text = "Example of additional text"
        with open('user_input.txt', 'a') as file:
                file.write('\n' + additional_text)
                print("Текст успешно добавлен в файл!")
        print(" Программа записи в файл")
write_to_file()


def check_file(filename):
    try:
        with open(filename, 'r') as file:
            content = file.read()
            return content
    except FileNotFoundError:
        print(f"Ошибка: Файл '{filename}' не найден")
check_file('exp.txt')
